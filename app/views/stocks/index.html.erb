<%= form_tag stocks_path, method: 'get' do %>
    <%= text_field_tag :query, params[:query], placeholder: "Search by Ticker", size: 50%>
    <%= submit_tag 'Search' %>


<% end %>

<% if @stock %>
     <p>Company: <%= @stock.company_name %> </p>

    <p> Latest Price: $<%= number_with_precision(@stock.latest_price, precision: 2, delimiter: ',') %> </p>
    <p> Previous Close: $<%= number_with_precision(@stock.previous_close, precision: 2, delimiter: ',') %> </p>
    <p> % Change: <%= @stock.change_percent%>% </p>
    <p> Market Cap: $<%= number_with_precision(@stock.market_cap, precision: 2, delimiter: ',') %></p>
     <%#= hidden_field_tag :ticker, value: @stock.symbol %>

     <p><%= link_to "follow this stock", stocks_path(:param1 => @stock.symbol), method: :post  %></p>
     <a href="https://iexcloud.io">Data provided by IEX Cloud</a>

<% end %>

<% if @error %>
<p><%= @error %></p>
<% end %>

